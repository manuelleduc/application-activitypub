  <content>{{velocity}}
{{html clean="false"}}
&lt;form method="post" id="authenticationSecurityConfigForm" action="${xwiki.getURL('ActivityPub.FollowUser', 'view')}" class='xform'&gt;
  &lt;div class="hidden"&gt;
    &lt;input type='hidden' name='form_token' value="$!{services.csrf.getToken()}" /&gt;
  &lt;/div&gt;
  &lt;dl&gt;
    &lt;dt&gt;
      &lt;label for="followInput"&gt;$services.localization.render('activitypub.follow.input.label')&lt;/label&gt;
      &lt;span class='xHint'&gt;$services.localization.render('activitypub.follow.input.hint')&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      &lt;input type="text" name="followInput" id="followInput" class="form-control" placeholder="$services.localization.render('activitypub.follow.input.placeholder')" /&gt;
    &lt;/dd&gt;
  &lt;/dl&gt;
  &lt;div class='buttonwrapper'&gt;
    &lt;input value="$services.localization.render('activitypub.follow.button')" class='button' type='submit'&gt;
  &lt;/div&gt;
&lt;/form&gt;
#if ($services.csrf.isTokenValid($request.form_token) &amp;&amp; "$!request.followInput" != "")
  #set ($followWorked = $services.activitypub.follow($request.followInput))
  #if ($followWorked)
      $services.localization.render('activitypub.follow.followRequested')
  #else
      $services.localization.render('activitypub.follow.followNotRequested')
  #end
#end
{{/html}}
{{/velocity}}
