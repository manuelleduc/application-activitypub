#macro(activitypubDashboard $isMyProfile)
#set ($userId = $services.model.resolveDocument($xcontext.user))
#set ($discard = $xwiki.jsx.use('ActivityPub.UserDashboard'))
#set ($discard = $xwiki.ssx.use('ActivityPub.UserDashboard'))
#if ($isMyProfile)
  #if (!$services.activitypub.isStorageReady())
    {{warning}}
    $services.localization.render('activitypub.storage.needrestart')
    {{/warning}}
  #end
  #if (!$services.webfinger.isWebfingerConfigured())
    {{warning}}
    $services.localization.render('activitypub.webfinger.notconfigured')
    {{/warning}}
  #end

  {{html clean='false'}}
  &lt;form id="followForm" class='xform'&gt;
    &lt;dl&gt;
      &lt;dt&gt;
        &lt;label for="followInput"&gt;$services.localization.render('activitypub.follow.input.label')&lt;/label&gt;
        &lt;span class='xHint'&gt;$services.localization.render('activitypub.follow.input.hint')&lt;/span&gt;
      &lt;/dt&gt;
      &lt;dd&gt;
        &lt;input type="text" name="followInput" id="followInput" class="form-control" placeholder="$services.localization.render('activitypub.follow.input.placeholder')" /&gt;
      &lt;/dd&gt;
    &lt;/dl&gt;
    &lt;div class='buttonwrapper'&gt;
      &lt;input value="$services.localization.render('activitypub.follow.button')" class='button' type='submit'&gt;
    &lt;/div&gt;
  &lt;/form&gt;
  #if ("$!request.followInput" != "" &amp;&amp; $services.csrf.isTokenValid($request.form_token))
    #set ($followWorked = $services.activitypub.follow($request.followInput))
    #if ($followWorked)
      $services.localization.render('activitypub.follow.followRequested')
    #else
      $services.localization.render('activitypub.follow.followNotRequested')
    #end
  #end
  {{/html}}
  {{html clean="false" wiki="true"}}
    &lt;div id="linkActors"&gt;
      #listFollowing($userId)
      #listFollowers($userId)
    &lt;/div&gt;
  {{/html}}
#else
  #if ($services.webfinger.isWebfingerConfigured())
    #set ($userIdentifier = $services.webfinger.getWebfingerId($doc.documentReference))
  #else
    #set ($userIdentifier = $services.activitypub.getActorURLFromDocumentReference($doc.documentReference))
  #end
  {{html clean='false'}}
    &lt;h1&gt;$services.localization.render('activitypub.user.identifier')&lt;/h1&gt;
    &lt;span class="noitems"&gt;$services.localization.render('activitypub.user.identifier.tip')&lt;/span&gt;
    &lt;div class="identifier-group"&gt;
      &lt;span class="form-control" id="user-identifier"&gt;$userIdentifier&lt;/span&gt;
      &lt;div class="btn btn-default" id="ap-button-paste" title="$services.localization.render('activitypub.user.identifier.copyButton')"&gt;
        $services.icon.renderHTML('paste')
      &lt;/div&gt;
    &lt;/div&gt;
  {{/html}}
#end

#macro(listFollowing $userId)
{{html clean="false"}}
&lt;div&gt;
    &lt;h1&gt;$services.localization.render('activitypub.following.title')&lt;/h1&gt;
#set ($following = $services.activitypub.following($userId))
#if ($following.empty)
  &lt;p&gt;$services.localization.render('activitypub.following.empty')&lt;/p&gt;
#else
    &lt;ul&gt;
  #foreach ($actor in $following)
    &lt;li&gt;$actor.preferredUsername@$actor.id.getHost()&lt;/li&gt;
  #end
    &lt;/ul&gt;
#end
&lt;/div&gt;
{{/html}}
#end

#macro (listFollowers $userId)
{{html clean="false"}}
&lt;div&gt;
  &lt;h1&gt;$services.localization.render('activitypub.followers.title')&lt;/h1&gt;
  #set ($followers = $services.activitypub.followers($userId))
  #if ($followers.empty)
  &lt;p&gt;$services.localization.render('activitypub.followers.empty')&lt;/p&gt;
  #else
  &lt;ul&gt;
    #foreach ($actor in $followers)
     &lt;li&gt;$actor.preferredUsername@$actor.id.getHost()&lt;/li&gt;
    #end
  &lt;/ul&gt;
  #end
&lt;/div&gt;
{{/html}}
#end
#end
{{/velocity}}
